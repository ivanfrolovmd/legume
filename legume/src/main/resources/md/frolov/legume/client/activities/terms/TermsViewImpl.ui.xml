<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:bi="urn:import:com.github.gwtbootstrap.client.ui.incubator"
             xmlns:p="urn:import:com.googlecode.gflot.client"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .box {
            margin: 20px;
        }

        .table {
            background-color: white;
        }

    </ui:style>
    <g:ScrollPanel>
        <g:FlowPanel styleName="{style.box}">
            <b:Row>
                <b:Column size="6">
                    <g:FlexTable ui:field="results" styleName="table table-bordered table-striped" addStyleNames="{style.table}"/>
                    <g:Label ui:field="totalLabel" />
                    <g:Label ui:field="otherLabel" />
                    <g:Label ui:field="missingLabel" />
                </b:Column>
                <b:Column size="6">
                    <p:SimplePlot ui:field="plot" width="300px" height="300px" />
                </b:Column>
            </b:Row>
        </g:FlowPanel>
    </g:ScrollPanel>
</ui:UiBinder>
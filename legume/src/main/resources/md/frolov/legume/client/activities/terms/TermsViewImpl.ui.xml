<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:bi="urn:import:com.github.gwtbootstrap.client.ui.incubator"
             xmlns:p="urn:import:com.googlecode.gflot.client"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .box {
            margin: 20px;
        }

        .table {
            background-color: white;
        }

    </ui:style>
    <g:ScrollPanel>
        <g:FlowPanel styleName="{style.box}">
            <g:FlowPanel ui:field="loadingPanel">
                <b:ProgressBar percent="100" type="ANIMATED" height="5px" width="100%"/>
            </g:FlowPanel>
            <g:FlowPanel ui:field="errorPanel" visible="false">
                <g:Label>Request timed out.</g:Label>
                <b:Button ui:field="tryAgain">Try again</b:Button>
            </g:FlowPanel>
            <g:FlowPanel visible="false" ui:field="resultsPanel">
            <b:Row>
                <b:Column size="6">
                    <g:FlexTable ui:field="results" styleName="table table-bordered table-striped table-hover" addStyleNames="{style.table}"/>
                    <g:Label ui:field="totalLabel" />
                    <g:Label ui:field="otherLabel" />
                    <g:Label ui:field="missingLabel" />
                </b:Column>
                <b:Column size="6">
                    <p:SimplePlot ui:field="plot" width="300px" height="300px" />
                </b:Column>
            </b:Row>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:ScrollPanel>
</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
                xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .box {
            background-color: #f1f1f1;
            border-bottom: 1px solid #e5e5e5;
        }
        .horizontal {
            vertical-align: middle;
        }
        .logo {
            font-family: OpenSansBold;
            font-size: 34px;
            margin: 10px 20px;
        }
        .searchBox {
            font-size: 14px;
            margin: 16px 10px;
            width: 700px;
            padding: 8px;
        }
        .button {
            margin: 24px 5px;
            display: inline-block;
        }

        .dateBox{
            width: 200px;
        }
    </ui:style>
    <g:AbsolutePanel styleName="{style.box}">
        <g:HorizontalPanel styleName="{style.horizontal}">
            <g:Label styleName="{style.logo}">Legume</g:Label>
            <g:TextBox ui:field="searchQuery" styleName="{style.searchBox}">Search</g:TextBox>
            <g:Button ui:field="submitButton" styleName="{style.button}">Submit</g:Button>
            <g:Button ui:field="resetButton" styleName="{style.button}">Reset</g:Button>
            <g:Anchor target="_blank" ui:field="openInNewWindow" styleName="{style.button}">In new Window</g:Anchor>
        </g:HorizontalPanel>
        <g:HorizontalPanel visible="false"> <!-- TODO Make time control -->
            <g:ListBox ui:field="commonTimes">
                <g:item value="-1">Predefined times</g:item>
                <g:item value="900000">Last 15 minutes</g:item>
                <g:item value="1800000">Last 30 minutes</g:item>
                <g:item value="3600000">Last hour</g:item>
                <g:item value="7200000">Last 2 hours</g:item>
                <g:item value="14400000">Last 4 hours</g:item>
                <g:item value="21600000">Last 6 hours</g:item>
                <g:item value="43200000">Last 12 hours</g:item>
                <g:item value="86400000">Last 24 hours</g:item>
                <g:item value="172800000">Last 48 hours</g:item>
                <g:item value="604800000">Last 7 days</g:item>
                <g:item value="0">All time</g:item>
            </g:ListBox>
            <g:Label>from:</g:Label>
            <d:DateBox ui:field="fromDate" styleName="{style.dateBox}"/>
            <g:Label>, to:</g:Label>
            <d:DateBox ui:field="toDate" styleName="{style.dateBox}"/>
        </g:HorizontalPanel>
    </g:AbsolutePanel>
</ui:UiBinder>
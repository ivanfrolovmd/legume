<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:md.frolov.legume.client.ui.components">
    <ui:style>
        .viewContainer {
            background: #E5E5E5;
        }
    </ui:style>
    <g:DockLayoutPanel unit='PX'>
        <g:north size='70'>
            <l:HeaderComponent/>
        </g:north>

        <g:center>
            <g:DockLayoutPanel unit="PX">
                <g:north size="100">
                    <l:HistogramComponent/>
                </g:north>
                <g:west size='250'>
                    <g:FlowPanel>
                        <g:Label>Navigation. To be implemented.</g:Label>
                        <l:LoggerComponent/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <!-- ResizeLayoutPanel required to insert other layout panels, like ScrollPanel -->
                    <g:ResizeLayoutPanel ui:field="viewContainer" styleName="{style.viewContainer}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:l="urn:import:md.frolov.legume.client.ui.components">
    <ui:style>
        .leftPanel>div{
            padding: 10px;
        }

        .divider {
            width: 100%;
            height: 1px;
            overflow: hidden;
            border-bottom: 1px solid #e5e5e5;
        }

        .fillAbsolute {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .header {
            height: 70px;
            bottom: auto;
            z-index: 3;
        }
        .histogram {
            top: 70px;
            height: 100px;
            bottom: auto;
            z-index: 1;
        }
        .centerContainer{
            top: 171px;
            overflow: hidden;
        }
        .leftContainer {
            width: 250px;
            right: auto;
            background-color: #fff;
            z-index: 2;
        }
        .histogram, .leftContainer {
            box-shadow: 0 0 12px rgba(0,0,0,0.15); /* TODO add compaitble CSS*/
            transition: box-shadow 1s ease;
        }
        .viewContainer{
            left: 250px;
            background: #E5E5E5;
        }
    </ui:style>
    <ui:style field="css" type="md.frolov.legume.client.ui.MainView.Css">
        .hasScrolls {
            box-shadow: 0 0 50px rgba(0,0,0,0.60);
        }
    </ui:style>
        <g:FlowPanel styleName="{style.fillAbsolute}">
            <g:FlowPanel styleName="{style.fillAbsolute} {style.header}">
                <l:HeaderComponent/>
            </g:FlowPanel>
            <g:FlowPanel styleName="{style.fillAbsolute} {style.histogram}" ui:field="histogram">
                <l:HistogramComponent/>
            </g:FlowPanel>
            <g:FlowPanel styleName="{style.fillAbsolute} {style.centerContainer}">
                <g:FlowPanel styleName="{style.fillAbsolute} {style.leftContainer}">
                    <g:ResizeLayoutPanel height="100%" width="100%">
                        <g:ScrollPanel>
                            <g:FlowPanel styleName="{style.leftPanel}">
                                <l:FieldsComponent/>
                                <b:Divider styleName="{style.divider}"/>
                                <l:ColorFieldsComponent/>
                            </g:FlowPanel>
                        </g:ScrollPanel>
                    </g:ResizeLayoutPanel>
                </g:FlowPanel>
                <g:FlowPanel styleName="{style.fillAbsolute} {style.viewContainer}">
                    <g:ResizeLayoutPanel ui:field="viewContainer" width="100%" height="100%"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
</ui:UiBinder>

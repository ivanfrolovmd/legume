<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:md.frolov.legume.client.ui.components">
    <ui:style>
        .viewContainer {
            background: #E5E5E5;
        }
        .box {
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
        }

        .leftPanel {
            padding: 10px;
        }
    </ui:style>
        <g:DockLayoutPanel unit='PX' styleName="{style.box}">
            <g:north size='70'>
                <l:HeaderComponent ui:field="header"/>
            </g:north>

            <g:center>
                <g:DockLayoutPanel unit="PX">
                    <g:north size="100">
                        <l:HistogramComponent/>
                    </g:north>
                    <g:west size='250'>
                        <g:ScrollPanel>
                            <g:FlowPanel styleName="{style.leftPanel}">
                                <l:FieldsComponent/>
                                <l:ColorFieldsComponent/>
                            </g:FlowPanel>
                        </g:ScrollPanel>
                    </g:west>
                    <g:center>
                        <!-- ResizeLayoutPanel required to insert other layout panels, like ScrollPanel -->
                        <g:ResizeLayoutPanel ui:field="viewContainer" styleName="{style.viewContainer}"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:center>
        </g:DockLayoutPanel>
</ui:UiBinder>

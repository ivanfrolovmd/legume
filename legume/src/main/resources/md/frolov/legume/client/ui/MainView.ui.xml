<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:md.frolov.legume.client.ui.components">
    <ui:style>
        .important {
            font-weight: bold;
        }
    </ui:style>
    <g:DockLayoutPanel unit='EM'>
        <g:north size='4'>
            <l:HeaderComponent />
        </g:north>

        <g:west size='16'>
            <g:Label>Navigation</g:Label>
        </g:west>

        <g:south size="4">
            <l:LoggerComponent />
        </g:south>

        <g:center>
            <!-- ResizeLayoutPanel required to insert other layout panels, like ScrollPanel -->
            <g:ResizeLayoutPanel ui:field="viewContainer"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .valueLabel{
            white-space: pre;
        }
        .keyLabel {
            background-color: azure;
            white-space: nowrap;
            width: 100px;
            overflow: hidden;
        }
    </ui:style>
    <g:HorizontalPanel>
        <!-- TODO use modifier keys (like Shift) to open in new window -->
        <g:Hyperlink ui:field="includeFilter">V</g:Hyperlink>
        <g:Hyperlink ui:field="excludeFilter">X</g:Hyperlink>
        <g:Label ui:field="key" styleName="{style.keyLabel}"/>
        <g:Label ui:field="value" styleName="{style.valueLabel}"/>
    </g:HorizontalPanel>
</ui:UiBinder>
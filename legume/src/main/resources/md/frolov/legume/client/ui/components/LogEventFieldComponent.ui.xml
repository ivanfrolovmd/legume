<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <!-- TODO fix loayout here -->
    <ui:style>
        .box {
            border-bottom: 1px solid #e5e5e5;
            position: relative;
        }

        .keyLabel {
            position: absolute;
            left: 0;
            width: 100px;
            top: 0;
            bottom: 0;
        }

        .keyLabel {
            font-family: OpenSansLight;
            white-space: nowrap;
            overflow: hidden;
            color: #999;
            background-color: #f5f5f5;
        }

        .valueLabel {
            white-space: pre;
            display: inline-block;
        }

        .valueContainer {
            white-space: nowrap;
        }

        .keyLabel, .valueLabel {
            padding: 2px 4px;
        }

        @external .caret;
            /* hide drop down caret */
        .dropdown span.caret {
            display: none;
        }

        .dropdown {
            margin-left: 108px;
            vertical-align: top;
        }

        .dropdown a {
            color: #666;
        }

        .absolute {
            position: absolute;
        }
    </ui:style>
    <g:FlowPanel>
        <g:FlowPanel styleName="{style.box}" ui:field="container">
            <g:Label ui:field="keyLabel" styleName="{style.keyLabel}"/>
            <g:FlowPanel styleName="{style.valueContainer}">
                <!-- TODO think off better wording -->
                <b:DropdownButton type="LINK" icon="FILTER" size="MINI" addStyleNames="{style.dropdown}" ui:field="actionsDropdown">
                    <b:NavLink icon="OK" ui:field="includeFilter">Restrict to this</b:NavLink>
                    <b:NavLink icon="OK_CIRCLE" ui:field="includeOnlyFilter">Search only this</b:NavLink>
                    <b:NavLink icon="REMOVE" ui:field="excludeFilter">Exclude this</b:NavLink>
                    <b:NavLink icon="REMOVE_CIRCLE" ui:field="excludeOnlyFilter">Search all except this</b:NavLink>
                    <b:NavLink icon="COPY" ui:field="copyToClipboard">Copy to clipboard</b:NavLink>
                </b:DropdownButton>
                <g:Label ui:field="valueLabel" styleName="{style.valueLabel}"/>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .colorLabel {
            color: white;
        }
        .time,.type,.source {
            overflow: hidden;
            white-space: nowrap;
        }
        .time {
            width:120px;
        }
        .type {
            width:50px;
        }
        .source {
            width:50px;
        }
        .message {
            white-space: pre;
            overflow-y: hidden;
            max-height: 4em;
        }
    </ui:style>

    <g:FlowPanel>
        <g:HorizontalPanel ui:field="summary"> <!-- TODO probably table here will be huge. Research if divs would be better -->
            <g:Button ui:field="more">&gt;</g:Button>
            <g:Label ui:field="time" styleName="{style.time}"/>
            <g:Label ui:field="type" styleName="{style.type} {style.colorLabel}">.</g:Label>
            <g:Label ui:field="source" styleName="{style.source} {style.colorLabel}">.</g:Label>
            <g:Label ui:field="message" styleName="{style.message}"/>
        </g:HorizontalPanel>
        <g:FlowPanel ui:field="details" visible="false">
            <g:Button ui:field="less">&lt;</g:Button>
            <g:FlowPanel ui:field="detailsContainer"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>